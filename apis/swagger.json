{
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "swagger": "2.0",
  "info": {
    "description": "Description of all APIs",
    "title": "gitops-agent",
    "version": "v0.0.3"
  },
  "paths": {
    "/api/v1/manifests": {
      "post": {
        "tags": [
          "Gitops"
        ],
        "summary": "Add a manifest to a gitops repository",
        "operationId": "Gitops_AddManifest",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/v1AddManifestRequest"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1AddManifestResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/runtimeError"
            }
          }
        }
      }
    },
    "/api/version": {
      "get": {
        "tags": [
          "Version"
        ],
        "summary": "Get the version of the service",
        "operationId": "Version_Version",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/versionVersionResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/runtimeError"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "protobufAny": {
      "type": "object",
      "properties": {
        "type_url": {
          "type": "string"
        },
        "value": {
          "type": "string",
          "format": "byte"
        }
      }
    },
    "runtimeError": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "details": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/protobufAny"
          }
        },
        "error": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    },
    "v1AddManifestRequest": {
      "type": "object",
      "properties": {
        "manifest": {
          "required": [
            "manifest"
          ],
          "$ref": "#/definitions/v1Manifest"
        },
        "repo": {
          "required": [
            "repo"
          ],
          "$ref": "#/definitions/v1Repository"
        }
      }
    },
    "v1AddManifestResponse": {
      "type": "object",
      "properties": {
        "path": {
          "description": "where the manifest was saved to",
          "type": "string"
        }
      }
    },
    "v1Manifest": {
      "type": "object",
      "title": "Manifest represents a file containing a manifest",
      "properties": {
        "data": {
          "description": "manifest data",
          "type": "string",
          "required": [
            "data"
          ]
        },
        "name": {
          "description": "manifest file name",
          "type": "string",
          "required": [
            "name"
          ]
        }
      }
    },
    "v1Repository": {
      "type": "object",
      "title": "Repository represents a remote git repository",
      "properties": {
        "clone_url": {
          "description": "repository clone url",
          "type": "string",
          "required": [
            "clone_url"
          ]
        },
        "provider": {
          "description": "git provider name",
          "type": "string",
          "default": "github",
          "required": [
            "provider"
          ]
        }
      }
    },
    "versionVersionResponse": {
      "type": "object",
      "title": "Version represents the version of the service",
      "properties": {
        "build_date": {
          "description": "build date",
          "type": "string"
        },
        "git_commit": {
          "description": "git commit",
          "type": "string"
        },
        "go_compiler": {
          "description": "go compiler",
          "type": "string"
        },
        "go_version": {
          "description": "go version",
          "type": "string"
        },
        "version": {
          "description": "version string",
          "type": "string"
        }
      }
    }
  }
}
